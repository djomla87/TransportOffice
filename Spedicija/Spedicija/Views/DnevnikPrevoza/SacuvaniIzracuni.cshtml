@model List<Spedicija.IzracunZarada>

@{
    ViewBag.Title = "SacuvaniIzracuni";
}


<section>       
<div class="container"> 
      <div class="section-body ">
          
        <div class="card card-bordered style-primary">
            <div class="card-head">
                			    <div class="tools">
								<div class="btn-group">
	                            <a class="btn btn-icon-toggle btn-refresh"><i class="md md-refresh"></i></a>
	                            <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
	                            <a class="btn btn-icon-toggle btn-close"><i class="md md-close"></i></a>
                                </div>
							    </div>
							    <header><i class="md md-assessment"></i>&nbsp Pregled sačuvanih izračuna</header>
			</div>
            <div class="card-body style-default-bright">


    <table class ="table">
        <tr>
            <th>Id Izračuna</th>
            <th>Naziv</th>
            <th>Datum Izračuna</th>
            <th></th>
        </tr>

        @foreach( var item in Model )
        {
            <tr>
                 <td>@item.IdIzracunZarada</td>
                 <td>@item.Naziv  </td>
                 <td>@item.DatumZapisa.ToShortDateString() </td>
                 <td><a href="/DnevnikPrevoza/PrikaziIzracun/@item.IdIzracunZarada" title="Prikaži"  class="btn btn-flat ink-reaction btn-default" ><i class='md md-details'></i></a></td>
                 <td><a href="/DnevnikPrevoza/PrikaziIzracunDelete/@item.IdIzracunZarada" title="Prikaži"  class="btn btn-flat ink-reaction btn-default" ><i class='md md-trash'></i></a></td>
            </tr>
        }

    </table>






    </div>
            </div>
          </div>
    </div>
    </section>
