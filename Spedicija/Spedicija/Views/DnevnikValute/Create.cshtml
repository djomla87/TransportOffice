<link href="~/Content/js/datetimepicker-bootstrap/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/Content/js/datetimepicker-bootstrap/bootstrap-datetimepicker.min.js"></script>
<script src="~/Content/js/datetimepicker-bootstrap/locales/bootstrap-datetimepicker.rs-latin.js"></script>

<script type="text/javascript">
    $(function () {

        $('.datum').datetimepicker({
            language: 'rs-latin',
            format: "dd.mm.yyyy hh:ii",
        todayBtn: "linked",
        autoclose: true,
        todayHighlight: true,
        toggleActive: true
    });
      

    });


</script> 


<section>  
<div class ="container">      
    <div class="section-body ">
           
        <div class="card card-bordered style-primary">
            <div class="card-head">
                			    <div class="tools">
								<div class="btn-group">
	                            <a class="btn btn-icon-toggle btn-refresh"><i class="md md-refresh"></i></a>
	                            <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
	                            <a class="btn btn-icon-toggle btn-close"><i class="md md-close"></i></a>
                                </div>
							    </div>
							    <header><i class="fa fa-fw fa-list"></i>&nbsp Kreiranje </header>
			</div>
 




@using (Html.BeginForm("Create", "DnevnikValute", FormMethod.Post, new { @class = "form", role = "form" })) {
    @Html.ValidationSummary(true)

	 <div class="card-body style-default-bright">

					  
                        @Html.HiddenFor(model => model.IdDnevnik, new { @Value = ViewBag.IdDnevnik })


        <div class="form-group floating-label">

                
					    @Html.TextBoxFor(model => model.DatumAktivnosti, new { @class = "form-control datum"  })
            @Html.ValidationMessageFor(model => model.DatumAktivnosti)
       

            @Html.LabelFor(model => model.DatumAktivnosti)

</div>
        <div class="form-group floating-label">

     @Html.DropDownList("Aktivnost", ViewBag.AktivnostiSL as SelectList, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Aktivnost)
       

            @Html.LabelFor(model => model.Aktivnost)

</div>
        <div class="form-group floating-label">

     
					    @Html.TextAreaFor(model => model.Detalji, new { @class = "form-control"  })
            @Html.ValidationMessageFor(model => model.Detalji)
       

            @Html.LabelFor(model => model.Detalji)

</div>
     



        </div>
		     <div class="card-actionbar style-default-bright">
				<div class="card-actionbar-row">	
                          <input type="submit" value="KREIRAJ" class = "btn btn-flat btn-primary ink-reaction"  />
						 @Html.ActionLink("NAZAD NA LISTU", "Index", null, new { @class = "btn btn-flat btn-primary ink-reaction pull-left"  })
									</div>
			</div>
}
        </div>
    </div>
	</div>
    </section>

