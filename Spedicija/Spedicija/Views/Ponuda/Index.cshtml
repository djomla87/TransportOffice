            "columnDefs": [
            {
                "targets": -1,
                "orderable": false,
                "data": null,
                "className": 'text-right',
               "render": function (data, type, row) {
                   return "<a href='Ponuda/ReportPonuda2/" + row[6] + "' title='PDF' class='btn btn-flat ink-reaction btn-default' target='_blank' ><i class='fa fa-file-pdf-o'></i></a>" +
                          "<a href='Ponuda/CreateFromPonuda/" + row[6] + "' title='Kreiraj Dnevnik' class='btn btn-flat ink-reaction btn-default' target='_blank' ><i class='fa fa-book'></i></a>" +
                           "<a href='Ponuda/Edit/" + row[6] + "' title='Izmjeni' class='btn btn-flat ink-reaction btn-default'><i class='md md-edit'></i></a>" +
                           "<a href='Ponuda/Delete/"  + row[6] + "' title='Izbriši' class='btn btn-flat ink-reaction btn-default'><i class='md md-delete'></i></a>";
					
                }
            }]

        });

     
    });
</script>



