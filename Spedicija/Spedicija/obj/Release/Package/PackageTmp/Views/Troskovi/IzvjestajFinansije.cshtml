                                                    <td>@item.Dobit.ToString("0.00")</td>
                                                    <td>@item.Kartica.ToString("0.00")</td>

                                                    @{
                                                        heder = @item.SerijskiBroj;
                                                        prihod += @item.Prihod;
                                                        rashod += @item.Rashod;
                                                        dobit += @item.Dobit;
                                                        kartica += @item.Kartica;

                                                    }
                                                </tr>




