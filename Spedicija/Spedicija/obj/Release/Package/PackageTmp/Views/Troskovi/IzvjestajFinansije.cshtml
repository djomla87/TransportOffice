                                            <label>Od Datuma </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group floating-label">
                                            <input type="text" name="DatumDo" class="form-control datum" value="@ViewBag.DatumDo" />
