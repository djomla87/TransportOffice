                                    <tr style="color: #0aa89e;font-weight: 500;">
                                        <td>Serijski Broj Ture</td>
                                        <td>Vozač</td>
                                        <td>Vozilo</td>
                                        <td>Opis</td>
                                        <td>Prihod</td>
                                        <td>Rashod</td>
                                        <td>Dobit</td>
                                        <td>Plaćeno Karticom</td>
                                    </tr>

                                    <tbody>

                                        @if (ViewBag.FinansijeTura != null)
                                        {
                                            String heder = "";
                                            Decimal prihod = 0;
                                            Decimal rashod = 0;
                                            Decimal dobit = 0;
                                            Decimal kartica = 0;

                                            Decimal avans = 0;
                                            Decimal troskovi = 0;
                                            int start = 0;
                                            foreach (var item in (List<Spedicija.Models.Finansije.Finansija>)ViewBag.FinansijeVozac)
