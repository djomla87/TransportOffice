                                                        <td>@item.Vozilo</td>

                                                        if (item.Opis.Equals("Avans"))
                                                        {
                                                            avans = item.Prihod;
                                                        }
                                                        troskovi = item.Rashod;
                                                    }
                                                    <td>@item.Opis</td>
                                                    <td>@item.Prihod.ToString("0.00")</td>
