                            <div class="col-md-6">

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group floating-label">
                                            @Html.DropDownList("IdVozac", ViewBag.Vozaci as SelectList, String.Empty, new { @class = "form-control select" })
