@model Spedicija.UsloviPrevoza

@{
    ViewBag.Title = "Delete";
}




<h3>Da li ste sigurni da želite da obrišete?</h3>


<section>     
<div class="container">   
    <div class="section-body ">
           
        <div class="card card-bordered style-primary">
            <div class="card-head">
                			    <div class="tools">
								<div class="btn-group">
	                            <a class="btn btn-icon-toggle btn-refresh"><i class="md md-refresh"></i></a>
	                            <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
	                            <a class="btn btn-icon-toggle btn-close"><i class="md md-close"></i></a>
                                </div>
							    </div>
							    <header><i class="fa fa-fw fa-trash"></i>&nbsp Da li ste sigurni da želite izbrisati?</header>
			</div>
            <div class="card-body style-default-bright">
<ul class="list divider-full-bleed">

	
	<li class="tile">
		<div class="ink-reaction">
			<div class="row">
			<div class="col-md-3"><div class="tile-icon">@Html.DisplayNameFor(model => model.IdUslov)</div><!-- <i class="fa fa-inbox"></i> --> </div>
						<div class="col-md-9"><div class="tile-text text-bold">@Html.DisplayFor(model => model.IdUslov )</div></div>
						</div>
		</div>
	</li>

	
	<li class="tile">
		<div class="ink-reaction">
			<div class="row">
			<div class="col-md-3"><div class="tile-icon">@Html.DisplayNameFor(model => model.Tekst)</div><!-- <i class="fa fa-inbox"></i> --> </div>
						<div class="col-md-9"><div class="tile-text text-bold">@Html.DisplayFor(model => model.Tekst )</div></div>
						</div>
		</div>
	</li>

	
	<li class="tile">
		<div class="ink-reaction">
			<div class="row">
			<div class="col-md-3"><div class="tile-icon">@Html.DisplayNameFor(model => model.Aktivan)</div><!-- <i class="fa fa-inbox"></i> --> </div>
						<div class="col-md-9"><div class="tile-text text-bold">@Html.DisplayFor(model => model.Aktivan )</div></div>
						</div>
		</div>
	</li>

</ul>
</div>


@using (Html.BeginForm()) {
    
	          <div class="card-actionbar style-default-bright">
				<div class="card-actionbar-row">	
						<input type="submit" value="Obriši" class = "btn btn-flat btn-warning ink-reaction" />
					    @Html.ActionLink("NAZAD NA LISTU", "Index", null, new { @class = "btn btn-flat btn-primary ink-reaction pull-left"  })
				</div>
			</div>
    
}

</div>
</div>
        </div>
    </section>


